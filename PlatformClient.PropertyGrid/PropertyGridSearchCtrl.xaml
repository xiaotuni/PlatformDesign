<UserControl x:Class="PlatformClient.PropertyGrid.PropertyGridSearchCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="txtInputValue" TextChanged="txtInputValue_TextChanged" />
        <Button Grid.Column="1" Name="btnClear" Click="btnClear_Click">
            <Button.Content>
                <Image Source="/PlatformClient.PropertyGrid;component/Images/111.png" />
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
