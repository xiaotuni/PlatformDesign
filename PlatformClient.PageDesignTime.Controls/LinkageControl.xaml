<UserControl 
    x:Class="PlatformClient.PageDesignTime.Controls.LinkageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="300" Width="400" 
    xmlns:my="clr-namespace:PlatformClient.PageDesignTime.Controls">

    <Grid x:Name="LayoutRoot" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <my:XtnCtrlTree x:Name="cControls" Grid.RowSpan="5" />
        <TextBox Grid.Column="2" Grid.Row="1" Name="txtControlName" IsEnabled="False" />
        
    </Grid>
</UserControl>
