<UserControl 
    x:Class="PlatformClient.Selectors.Core.ApiSelectors.XtnApiSwitchForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:my="clr-namespace:PlatformClient.PageDesignTime.Controls;assembly=PlatformClient.PageDesignTime.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
>
    <Grid x:Name="LayoutRoot" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <my:PageFileTree Name="pft" IsDisplayToolbar="Collapsed" />
        <TextBlock Grid.Column="1" Text="当前【xxx】页面切换到【xxx】页面"  Name="txtSwitchForm"/>
    </Grid>
</UserControl>
