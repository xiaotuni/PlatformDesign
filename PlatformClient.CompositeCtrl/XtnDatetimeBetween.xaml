<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    x:Class="PlatformClient.CompositeCtrl.XtnDatetimeBetween"
    mc:Ignorable="d"
    d:DesignHeight="30" 
    d:DesignWidth="300"
>

    <Grid x:Name="LayoutRoot" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtContent" Text="_显示内容_"  HorizontalAlignment="Right" VerticalAlignment="Center" />

        <sdk:DatePicker Grid.Column="1" Name="dpBegin"/>
        <TextBlock Text=" ~ " Grid.Column="2" VerticalAlignment="Center" Margin="0,0,0,0"/>
        <sdk:DatePicker Grid.Column="3" Name="dpEnd"/>
    </Grid>
</UserControl>
